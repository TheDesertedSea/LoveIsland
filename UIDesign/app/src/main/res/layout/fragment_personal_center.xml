<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.personal_center.PersonalCenterFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/top_zone_personal_center"
        android:layout_width="match_parent"
        android:layout_height="382dp"
        android:background="@color/theme_color2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/user_icon"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_marginTop="50dp"
            android:src="@drawable/lilimu"
            app:civ_border_color="@color/gray"
            app:civ_border_width="2dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"

            />

        <ImageButton
            android:id="@+id/button_edit_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginRight="4dp"
            android:backgroundTint="#0000FF19"
            android:src="@drawable/ic_edit_black_36dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/nick_name_personal_center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="荒海"
            android:textSize="28sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/user_icon" />

        <TextView
            android:id="@+id/sex_school_center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="男生，电子科技大学"
            android:textSize="20sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/nick_name_personal_center" />

        <TextView
            android:id="@+id/intro_personal_center"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="荒海，遥远天边的旅人。周游四海，只为寻求那传说中的冰山宝石？冰山何在，绿林存乎？"
            android:textSize="14sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/sex_school_center" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="351dp"
        android:background="@color/background_color3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/top_zone_personal_center">

        <ImageButton
            android:id="@+id/button_my_confession"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#00594F4F"
            android:src="@drawable/ic_my_confession_black_48dp"
            app:layout_constraintBottom_toTopOf="@+id/logout_button"
            app:layout_constraintHorizontal_bias="0.26"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.28" />

        <TextView
            android:id="@+id/text_button_m_c"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的表白"
            android:textSize="16sp"
            app:layout_constraintLeft_toLeftOf="@id/button_my_confession"
            app:layout_constraintRight_toRightOf="@id/button_my_confession"
            app:layout_constraintTop_toBottomOf="@id/button_my_confession" />

        <ImageButton
            android:id="@+id/button_my_discussion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#00594F4F"
            android:src="@drawable/ic_my_discussion_black_48dp"
            app:layout_constraintBottom_toTopOf="@+id/logout_button"
            app:layout_constraintHorizontal_bias="0.74"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.28" />

        <TextView
            android:id="@+id/text_button_m_d"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的讨论"
            android:textSize="16sp"
            app:layout_constraintLeft_toLeftOf="@id/button_my_discussion"
            app:layout_constraintRight_toRightOf="@id/button_my_discussion"
            app:layout_constraintTop_toBottomOf="@id/button_my_discussion" />

        <Button
            android:id="@+id/logout_button"
            android:layout_width="113dp"
            android:layout_height="38dp"
            android:background="#2337B31B"
            android:text="登出当前账号"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.669" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>