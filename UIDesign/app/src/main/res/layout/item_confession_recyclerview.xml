<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"
        android:background="#ffffff">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/item_title"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <ImageView
                    android:id="@+id/item_title_avatar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_default_avatar_24dp" />

                <TextView
                    android:id="@+id/item_title_username"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@id/item_title_avatar"
                    android:padding="10dp"
                    android:text="用户名"
                    android:textSize="15sp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/item_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/item_content_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:text="表白内容表白内容表白内容表白内容表白内容表白内容表白内容表白内容表白内容表白内容表白内容表白内容表白内容表白内容表白内容表白内容表白内容表白内容表白内容表白内容表白内容表白内容表白内容"
                    android:paddingLeft="10dp"/>

<!--                <ImageView-->
<!--                    android:id="@+id/item_content_image"-->
<!--                    android:layout_width="100dp"-->
<!--                    android:layout_height="100dp"-->
<!--                    android:layout_below="@id/item_content_text"-->
<!--                    android:src="@drawable/ic_default_image_50dp"-->
<!--                    android:paddingLeft="10dp"/>-->

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/like_and_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageButton
                    android:id="@+id/item_share"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/ic_share_24dp"
                    android:background="@color/white"
                    android:padding="5dp"/>

                <ImageButton
                    android:id="@+id/item_comment"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/ic_comment_24dp"
                    android:background="@color/white"
                    android:padding="5dp"/>

                <ImageButton
                    android:id="@+id/item_like"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/ic_like_non_24dp"
                    android:background="@color/white"
                    android:padding="5dp"/>

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>