<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"
        android:background="#ffffff">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/item_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/item_title_avatar"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_default_avatar_24dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:civ_border_color="#FF000000"
                    app:civ_border_width="2dp"
                    android:padding="5dp"
                    />

                <TextView
                    android:id="@+id/item_title_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="用户名"
                    android:textSize="18sp"
                    app:layout_constraintLeft_toRightOf="@id/item_title_avatar"
                    app:layout_constraintTop_toTopOf="@id/item_title_avatar"
                    android:paddingTop="5dp"
                    />

                <TextView
                    android:id="@+id/time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2020-11-30 18:12"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="@id/item_title_avatar"
                    app:layout_constraintLeft_toRightOf="@id/item_title_avatar" />


            </androidx.constraintlayout.widget.ConstraintLayout>

            <RelativeLayout
                android:id="@+id/item_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/item_content_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:text="讨论内容"
                    android:paddingLeft="10dp"/>

                <ImageView
                    android:id="@+id/item_content_image"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_below="@id/item_content_text"
                    android:src="@drawable/ic_default_image_50dp"
                    android:paddingLeft="10dp"/>

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/like_and_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/item_share"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/ic_share_24dp"
                    android:padding="5dp"/>

                <ImageView
                    android:id="@+id/item_comment"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/ic_comment_24dp"
                    android:padding="5dp"/>

                <ImageView
                    android:id="@+id/item_like"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/ic_like_non_24dp"
                    android:padding="5dp"/>

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>