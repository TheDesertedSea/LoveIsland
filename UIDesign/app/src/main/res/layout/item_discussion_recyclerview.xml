<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"
        android:background="#ffffff">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/item_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/item_title_avatar"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:padding="5dp"
                    android:src="@drawable/lilimu"
                    app:civ_border_color="#FF000000"
                    app:civ_border_width="2dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/item_title_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="用户名"
                    android:textSize="20sp"
                    app:layout_constraintLeft_toRightOf="@id/item_title_avatar"
                    app:layout_constraintTop_toTopOf="@id/item_title_avatar"
                    android:paddingTop="5dp"
                    />

                <TextView
                    android:id="@+id/time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2020-11-30 18:12"
                    android:textSize="16sp"
                    android:paddingBottom="5dp"
                    app:layout_constraintBottom_toBottomOf="@id/item_title_avatar"
                    app:layout_constraintLeft_toRightOf="@id/item_title_avatar" />


            </androidx.constraintlayout.widget.ConstraintLayout>

            <RelativeLayout
                android:id="@+id/item_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/item_content_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:text="表白内容表白内容表白内容表白内容表白内容表白内容表白内容表白内容表白内容表白内容表白内容表白内容表白内容表白内容表白内容表白内容表白内容表白内容表白内容表白内容表白内容表白内容表白内容"
                    android:paddingLeft="10dp"/>

                <!--                <ImageView-->
                <!--                    android:id="@+id/item_content_image"-->
                <!--                    android:layout_width="100dp"-->
                <!--                    android:layout_height="100dp"-->
                <!--                    android:layout_below="@id/item_content_text"-->
                <!--                    android:src="@drawable/ic_default_image_50dp"-->
                <!--                    android:paddingLeft="10dp"/>-->

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/like_and_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp">

                <ImageButton
                    android:id="@+id/item_share"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/ic_share_24dp"
                    android:background="@color/white"
                    android:padding="5dp"/>

                <ImageButton
                    android:id="@+id/item_comment"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/ic_comment_24dp"
                    android:background="@color/white"
                    android:padding="5dp"/>

                <ImageButton
                    android:id="@+id/item_like"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/ic_like_non_24dp"
                    android:background="@color/white"
                    android:padding="5dp"/>

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>