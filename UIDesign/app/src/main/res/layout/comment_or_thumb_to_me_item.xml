<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background_color2">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/writer_icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/lilimu"
            app:civ_border_color="#FF000000"
            app:civ_border_width="2dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/nick_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="余沐寒"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toRightOf="@id/writer_icon"
            app:layout_constraintTop_toTopOf="@id/writer_icon" />

        <TextView
            android:id="@+id/comment_or_like_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2020-12-14 19:15"
            android:textSize="16sp"
            app:layout_constraintLeft_toRightOf="@id/writer_icon"
            app:layout_constraintTop_toBottomOf="@id/nick_name" />

        <TextView
            android:id="@+id/content_brief"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="你想表达什么？"
            android:textSize="16sp"
            app:layout_constraintLeft_toLeftOf="@id/writer_icon"
            app:layout_constraintTop_toBottomOf="@id/comment_or_like_date" />


</androidx.constraintlayout.widget.ConstraintLayout>